<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="inherit_report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[hasclass('page')]//div[hasclass('row', 'mt32', 'mb32')]" position="replace">            
            
            <div class='row'> 
                 <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2 col-xs-6">
                    <strong>Quotation Date:</strong>
                    <p t-field="doc.date_order"/>
                 </div>
                 <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2 col-xs-6">
                    <strong>Date Ordered:</strong>
                    <p t-field="doc.confirmation_date"/>
                 </div>
                 <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2 col-xs-6">
                    <strong>Expiration Date:</strong>
                    <p t-field="doc.validity_date"/>
                 </div>
                <div t-if="doc.client_order_ref" class="col-auto mw-100 mb-2 col-xs-4">
                    <strong>Your Reference:</strong>
                    <span t-field="doc.client_order_ref"/>
                 </div>
              </div>
            <table class="table">
                <thead>
                    <tr>
                      <th class="text-left">Vehicle Number:
                        <t t-if="doc.vehicle_number">
                        <span t-field="doc.vehicle_number"/>
                    </t>
                     </th>
                      <th class="text-left">Driver Name:
                        <t t-if="doc.driver_name">
                       <span t-field="doc.driver_name"/>
                    </t>
                    </th>
                      <th class='text-left'>Driver Contact:
                        <t t-if="doc.driver_contacts">
                           <span t-field="doc.driver_contacts"/>
                        </t>
                      </th>
                    </tr>
                </thead>
            </table>  
        </xpath>
    </template>
  </data>
</odoo>