<?xml version="1.0"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="res_partner_form_view_inherit">
      <field name="name">account payment form view inherit</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="arch" type="xml">
          <xpath expr="//sheet/group/group[2]/field[@name='communication']" position="after">
              <field name="customer_bank" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              <field name="cheque_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
          </xpath>
      </field>
    </record>
  </data>
</odoo>